    <div class="container">
        <h1 id="saludo">¡Hola! Bienvenido.</h1>
        <p>Esta página está alojada en GitHub Pages.</p>
    </div>

    <script>
        // SCRIPT OPCIONAL:
        // Descomenta la siguiente línea si quieres una ventana emergente (popup) al entrar:
        // alert("¡Hola! Gracias por visitar mi página.");

        // Este código cambia el saludo según la hora del día automáticamente
        const hora = new Date().getHours();
        const titulo = document.getElementById('saludo');

        if (hora < 12) {
            titulo.innerText = "¡Buenos días! Bienvenido.";
        } else if (hora < 20) {
            titulo.innerText = "¡Buenas tardes! Bienvenido.";
        } else {
            titulo.innerText = "¡Buenas noches! Bienvenido.";
        }
    </script>
